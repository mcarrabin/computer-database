<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>computer-database</display-name>
  
  <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/404.html</location>
  </error-page>
  <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jsp/500.html</location>
  </error-page>
  
<!--   <servlet> -->
<!-- 	<servlet-name>spring</servlet-name> -->
<!-- 	<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class> -->
<!-- 	<load-on-startup>1</load-on-startup> -->
<!--   </servlet> -->
  
  <servlet>
  	<servlet-name>PageServlet</servlet-name>
  	<servlet-class>com.excilys.computerdatabase.servlets.PageServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AddComputerServlet</servlet-name>
  	<servlet-class>com.excilys.computerdatabase.servlets.AddComputerServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>EditComputerServlet</servlet-name>
  	<servlet-class>com.excilys.computerdatabase.servlets.EditComputerServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>DeleteComputerServlet</servlet-name>
  	<servlet-class>com.excilys.computerdatabase.servlets.DeleteComputerServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>PageServlet</servlet-name>
  	<url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AddComputerServlet</servlet-name>
  	<url-pattern>/computer/add</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>EditComputerServlet</servlet-name>
  	<url-pattern>/computer/edit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DeleteComputerServlet</servlet-name>
  	<url-pattern>/computer/delete</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>PageServlet</welcome-file>
  </welcome-file-list>
  
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
</listener>
  
</web-app>