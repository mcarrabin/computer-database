<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
   xmlns:context="http://www.springframework.org/schema/context"
   xmlns:tx="http://www.springframework.org/schema/tx"
   xsi:schemaLocation="
   		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.1.xsd">    
    <context:annotation-config />
    <context:component-scan base-package="com.excilys.computerdatabase.dao, com.excilys.computerdatabase.dto, com.excilys.computerdatabase.entities,
    	com.excilys.computerdatabase.mappers, com.excilys.computerdatabase.services, com.excilys.computerdatabase.servlet,
    	com.excilys.computerdatabase.utils, com.excilys.computerdatabase.validator" />
    
    <tx:annotation-driven transaction-manager="transactionManager" proxy-target-class="true" />
    
    	<!-- HikariCP configuration -->
   <bean id="hikariConfig" class="com.zaxxer.hikari.HikariConfig">
       <property name="poolName" value="springHikariCP" />
       <property name="dataSourceClassName" value="com.mysql.jdbc.jdbc2.optional.MysqlDataSource" />
       <property name="maximumPoolSize" value="300" />        <property name="dataSourceProperties">
           <props>
               <prop key="url">jdbc:mysql://localhost:3306/computer-database-db?zeroDateTimeBehavior=convertToNull</prop>
               <prop key="user">admincdb</prop>
               <prop key="password">qwerty1234</prop>
           </props>
       </property>
   </bean>
   
   <bean id="dataSource" class="com.zaxxer.hikari.HikariDataSource"
       destroy-method="close">
       <constructor-arg ref="hikariConfig" />
   </bean>
   
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
    	<property name="dataSource" ref="dataSource" />
    </bean>
    
    <bean id="computerDao" class="com.excilys.computerdatabase.dao.ComputerDao" >
    	<property name="dataSource" ref="dataSource" />
    </bean>
   
</beans>